@page
@model LogoutModel
@{
    ViewData["Title"] = "Wyloguj się";
}

<section>
    <h1 class="display-6 mb-3">@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-primary text-dark">Kliknij aby wylogować</button>
            </form>
        }
        else
        {
            <p>Jesteś już wylogowany z aplikacji.</p>
        }
    }
</section>
