@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<link rel="stylesheet" href="~/css/Views/Home/Login.css" asp-append-version="true" />

<header class=" d-flex align-items-center justify-content-center">
    <div class="background-overlay"></div>
    <div class="background"></div>
    <div class="text-center align-content-md-center">
<div class="row">
    <div class="col-md-11">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Utwórz nowe konto.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Zarejestruj sie</button>
        </form>
    </div>
</div>
    </div>
</header>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
