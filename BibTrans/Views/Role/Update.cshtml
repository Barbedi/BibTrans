@model IdentityRole
@{
    ViewData["Title"] = "Edytuj rolę";
}

<h1>@Html.ValueFor(model => model.Id)</h1>
<hr />
<form class="panel-bg container my-5" asp-action="ModifyMember">
    <input type="hidden" name="roleName" value="@Html.ValueFor(model => model.Name)" />
    <div class="form-group">
        <label class="form-label" for="userEmail">E-mail użytkownika:</label>
        <input class="form-control" type="email" name="userEmail" required />
    </div>
    <div class="form-group mt-3">
        <button class="btn btn-primary" type="submit" name="action" value="Create">Dodaj</button>
        <button class="btn btn-danger" type="submit" name="action" value="Delete">Usuń</button>
    </div>
</form>