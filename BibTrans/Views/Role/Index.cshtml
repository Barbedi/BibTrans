@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Role";
}

<div class="px-5">
    <h1 class="display-2">Wszystkie role</h1>
    <a asp-action="Create" class="btn btn-primary mb-3">Dodaj nową rolę</a>
    <table class="table table-sm table-bordered table-bordered">
        <tr><th>ID</th><th>Nazwa</th><th>Użytkownicy</th><th>Edytuj</th><th>Usuń</th></tr>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td i-role="@role.Id"></td>
                <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Edytuj</a></td>
                <td>
                    <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Usuń
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
</div>